{
  "name": "minimal-blue",
  "displayName": "Minimal Blue",
  "description": "Minimal Blue is a dark, distraction-free theme for VS Code, designed for a sleek and minimal UI experience. It removes unnecessary UI elements, applies curated settings, and features a clean line highlight for better focus. Enjoy a blue, neon-inspired aesthetic with a custom welcome page for a clean, minimal coding experience.",
  "version": "0.0.2",
  "icon": "logo.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/AzamAliCodes/minimal-blue-vscode-theme.git"
  },
  "engines": {
    "vscode": "^1.98.0"
  },
  "categories": [
    "Themes",
    "Other"
  ],
  "keywords": [
    "minimal",
    "blue",
    "minimal blue",
    "minimal blue theme",
    "minimal blue theme ui",
    "ui",
    "minimal ui",
    "minimal theme",
    "neon theme",
    "blue theme",
    "distraction-free",
    "clean ui",
    "welcome page",
    "dark theme",
    "cosmic theme",
    "neon blue",
    "minimalist",
    "productivity",
    "coding theme",
    "vscode theme",
    "visual studio code theme",
    "custom ui",
    "minimalist theme",
    "blue ui",
    "neon ui",
    "simple theme",
    "clean theme",
    "modern theme"
  ],
  "license": "MIT",
  "contributes": {
    "themes": [
      {
        "label": "Minimal Blue",
        "uiTheme": "vs-dark",
        "path": "./themes/Minimal Blue-color-theme.json"
      }
    ],
    "viewsWelcome": [
      {
        "view": "explorer",
        "contents": "Welcome to Minimal Blue\n[Explore the Cosmic Welcome Page](command:minimalBlue.showWelcome)"
      }
    ],
    "commands": [
      {
        "command": "minimalBlue.showWelcome",
        "title": "Minimal Blue: Show Welcome Page"
      }
    ]
  },
  "activationEvents": [
    "onStartupFinished",
    "onCommand:minimalBlue.showWelcome",
    "onLanguage:javascript",
    "onLanguage:typescript",
    "onLanguage:html",
    "workspaceContains:**/*"
  ],
  "main": "./extension.js",
  "scripts": {
    "vscode:prepublish": "echo 'Prepublish step completed'",
    "package": "vsce package"
  },
  "dependencies": {},
  "devDependencies": {},
  "extensionRecommendations": [
    "PKief.material-icon-theme",
    "esbenp.prettier-vscode"
  ]
}
